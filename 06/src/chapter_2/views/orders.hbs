<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Заказы</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
    <div class="container">
        {{#if orders.length}}
            {{#each orders}}
                <div class="orderItem">
                    <div>Заказ: {{this.dataValues.id}}</div>
                    {{#if this.isActive}}
                        <div>Статус заказа: Активен</div>
                    {{else}}
                        <div>Статус заказа: Закрыт</div>
                    {{/if}}
                    <div>Официант: {{this.dataValues.User.dataValues.name}}</div>
                    <div>Блюда:</div>
                    <div>
                        {{#each this.dataValues.MenuItems}}
                            <div>{{this.dataValues.title}}</div>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p>Нет заказов для отображения</p>
        {{/if}}
    </div>
    <br> <br>
    <button onclick="window.history.back()">Назад</button>
</body>
</html>
