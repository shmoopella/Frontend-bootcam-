<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Меню</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <div class="container">
            {{#if items.length}}
                {{#each items}}
                    <div class="orderItem">
                        {{this.title}}<br>
                        {{this.description}}<br>
                        {{this.cost}}<br>
                        <img src="{{this.picture}}" alt="Image">
                    </div>
                {{/each}}
            {{/if}}
        </div>
        <button onclick="window.history.back()">Назад</button>
    </body>
<html>
