<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Создание заказа</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <div class="container">
            {{#if items.length}}
                {{#each items}}
                    <div class="orderItem">
                        {{this.title}}<br>
                        <img src="{{this.picture}}" alt="Image">
                    </div>
                {{/each}}
            {{/if}}
        </div>
        <form action="/orders/:{{this.orderId}}" method="post">
            <div>Total amount: {{this.amount}}</div><br>
            <input type="hidden" name="orderId" value={{this.orderId}}>
            <input type="submit" value="Закрыть заказ">
        </form>
        <br>
        <button onclick="window.history.back()">Назад</button>
    </body>
</html>
